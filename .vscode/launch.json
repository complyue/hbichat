        },
        {
            "name": "Pretty Exports",
            "type": "python",
            "request": "launch",
            "env": {},
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/../hbi/pretty-exports.py",
            "args": [],
            "console": "integratedTerminal"
        }
    ]
