{
    "version": "0.2.0",
    "configurations": [
        {
            // delve not supporting TUI programs yet, you need to
            // put the calls into banner script to debug them
            "name": "Test Water Server - Go",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "env": {
                "GOMAXPROCS": "2"
            },
            "program": "${workspaceFolder}/cmd/server-tw",
            "args": [
                "-v=3"
            ]
        },
        {
            // delve not supporting TUI programs yet, you need to
            // put the calls into banner script to debug them
            "name": "Test Water Client - Go",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "env": {
                "GOMAXPROCS": "2"
            },
            "program": "${workspaceFolder}/cmd/client-tw",
            "args": [
                "-v=3"
            ]
        },
        {
            "name": "Chat Server - Go",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "env": {
                "GOMAXPROCS": "2"
            },
            "program": "${workspaceFolder}/cmd/server",
            "args": [
                "-v=3"
            ]
        },
        {
            "name": "Chat Server - Python",
            "type": "python",
            "request": "launch",
            "env": {
                "HBI_LOG_LEVEL": "DEBUG",
                "HBICHAT_LOG_LEVEL": "DEBUG"
            },
            "cwd": "${workspaceFolder}",
            "module": "hbichat.cmd.server",
            "args": [],
            "console": "integratedTerminal"
        },
        {
            "name": "Chat Client - Python",
            "type": "python",
            "request": "launch",
            "env": {
                "HBI_LOG_LEVEL": "DEBUG",
                "HBICHAT_LOG_LEVEL": "DEBUG"
            },
            "cwd": "${workspaceFolder}",
            "module": "hbichat.cmd.client",
            "args": [],
